<% include partials/_header %>

    <div class="container">
        <div class="row">
            <!--FORM-->
            <div class="col-md-5 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <form action="/edit/<%= task._id %>" method="post">
                            <div class="form-group">
                                <input class="form-control" type="text" name="usuario" placeholder="Usuario" value="<%= task.usuario %>">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control" name="contraseña" cols="80" placeholder="Contraseña del usuario"><%= task.contraseña %></textarea>
                            </div>
                            <div class="form-group">
                                <input class="form-control" type="text" name="edad" placeholder="Edad" value="<%= task.edad %>">
                            </div>
                            <button class="btn btn-primary" type="submit">
              Actualizar 
            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <% include partials/_footer%>